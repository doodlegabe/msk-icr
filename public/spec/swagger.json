{
  "swagger": "2.0",
  "info": {
    "description": "API service used for handwriting transcriptions",
    "version": "0.0.0",
    "title": "Moleskine ICR API",
    "contact": {
      "email": "gabriel.walsh@moleskine.com"
    },
    "license": {
      "name": "MIT",
      "url": "https://opensource.org/licenses/MIT"
    }
  },
  "host": "msk-icr.herokuapp.com",
  "basePath": "/",
  "tags": [
    {
      "name": "provider",
      "description": "Cloud-based ICR and NLP providers."
    }
  ],
  "schemes": [
    "https"
  ],
  "paths": {
    "/get-providers": {
      "get": {
        "tags": [
          "provider"
        ],
        "summary": "List Providers",
        "description": "Shows the current ICR and NLP providers.",
        "operationId": "getProviders",
        "produces": [
          "application/json"
        ],
        "responses": {
          "200": {
            "description": "successful listing",
            "schema": {
              "type": "array",
              "items": {
                "$ref": "#/definitions/Provider"
              }
            }
          },
          "400": {
            "description": "Invalid status value"
          }
        },
        "security": [
          {
            "user_auth": [
              "read:providers"
            ]
          }
        ]
      }
    },
    "/transcribe":{
      "post":{
        "tags": [
          "transcription",
          "provider"
        ],
        "summary": "Transcribes a photographed Moleskine Page.",
        "consumes": [
          "application/json",
          "x-www-form-urlencoded"
        ],
        "description": "Takes the request for a given image URI and provider and provides a transcription.",
        "operationId": "getTranscription",
        "parameters": [
          {
            "in": "body",
            "name": "image",
            "description": "TK",
            "schema": {
              "$ref": "#/definitions/Image"
            }
          }
        ],
        "produces":[
          "application/json"
        ],
        "responses":{
          "201":{
            "description": "Successful transcription",
            "schema":{
              "type":"array",
              "items": {
                "$ref": "#/definitions/Transcription"
              }
            }
          },
          "500":{
            "description": "Error"
          }
        }
      }
    }
  },
  "securityDefinitions": {
    "user_auth": {
      "type": "oauth2",
      "authorizationUrl": "https://msk-icr.herokuapp.com/oauth/providers",
      "flow": "implicit",
      "scopes": {
        "read:providers": "lists providers"
      }
    },
    "api_key": {
      "type": "apiKey",
      "name": "api_key",
      "in": "header"
    }
  },
  "definitions": {
    "Image": {
      "type": "object",
      "properties": {
        "imageUri": {
          "type": "string",
          "description": "URI of the photographed Notebook page"
        }
      }
    },
    "Provider": {
      "type": "object",
      "properties": {
        "apiId": {
          "type": "string",
          "description": "API id for each provider passed during transcription."
        },
        "name": {
          "type": "string",
          "description": "Name of ICR or NLP Provider"
        },
        "description": {
          "type": "string",
          "description": "Description of ICR or NLP Provider"
        },
        "documentation": {
          "type": "string",
          "format": "URL to further documentation"
        },
        "active": {
          "type": "boolean",
          "description": "Whether provider is currently active."
        }
      }
    },
    "Transcription":{
      "type": "object",
      "properties": {
        "apiId": {
          "type": "string",
          "description": "API id for each provider passed during transcription."
        },
        "result":{
          "type":"string",
          "description": "TETD"
        }
      }
    }
  }
}